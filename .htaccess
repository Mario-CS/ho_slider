# Proteger archivos PHP y SQL pero permitir assets (CSS, JS, im√°genes)

# Apache 2.2
<IfModule !mod_authz_core.c>
    <FilesMatch "\.(gif|jpe?g|png|webp|svg|css|js|woff2?|ttf|eot)$">
        Order allow,deny
        Allow from all
    </FilesMatch>
    Order deny,allow
    Deny from all
</IfModule>

# Apache 2.4+
<IfModule mod_authz_core.c>
    <FilesMatch "\.(gif|jpe?g|png|webp|svg|css|js|woff2?|ttf|eot)$">
        Require all granted
    </FilesMatch>
    Require all denied
</IfModule>

# Disable directory listing
Options -Indexes
